body {
  padding: 40px 20px;
  font-family: 'Segoe UI', sans-serif;
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
}

/* Container layout */
.container {
  max-width: 960px;
  margin: 0 auto;
  padding: 20px;
}

/* Title Header */
.page-title {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 700;
  margin-top: 0;
  margin-bottom: 8px;
  color: #003300;
  font-family: 'Satisfy', cursive;
  text-shadow: 2px 2px 2px #ccc;
}

.page-subtitle {
  text-align: center;
  font-size: 1.2rem;
  color: #333;
  font-style: italic;
  margin-bottom: 30px;
}

/* Leaderboard section container */
.leaderboard-card {
  background: #ffffffcc;
  border-radius: 12px;
  padding: 24px;
  margin-bottom: 40px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  text-align: center;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

/* Form Styling Fixes */
form {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  margin-top: 20px;
}

form label {
  font-weight: bold;
  color: #134a2d;
  display: flex;
  align-items: center;
  gap: 10px;
}

form input[type="text"] {
  padding: 6px 12px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 1rem;
  min-width: 180px;
  text-align: center;
}

form input[type="submit"] {
  padding: 8px 16px;
  background-color: #134a2d;
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 1rem;
  cursor: pointer;
}

form input[type="submit"]:hover {
  background-color: #0f3e25;
}

/* Table styles */
.themed-table {
  width: 100%;
  border-collapse: collapse;
  table-layout: fixed;
  margin: 0 auto;
}

.themed-table th,
.themed-table td {
  padding: 14px 20px;
  font-size: 1.1rem;
  text-align: center;
  vertical-align: middle;
  white-space: nowrap;
}

.themed-table td:nth-child(2) {
  text-align: center;
  max-width: 240px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.even-row {
  background-color: #f9f9f9;
}

/* Badge alignment */
.player-name-with-check {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  line-height: 1;
  vertical-align: middle;
  width: 100%;
  text-align: center;
}

.tie-badge {
  display: inline-block;
  font-size: 0.7rem;
  padding: 0.15em 0.45em;
  border-radius: 999px;
  vertical-align: middle;
  margin-left: 4px;
  line-height: 1;
  height: auto;
  font-weight: bold;
  color: #fff;
}

/* Badge colors */
.tie-badge-1 { background-color: #4caf50 !important; }
.tie-badge-2 { background-color: #ffc107 !important; }
.tie-badge-3 { background-color: #f44336 !important; }
.tie-badge-4 { background-color: #2196f3 !important; }
.tie-badge-5 { background-color: #9c27b0 !important; }
