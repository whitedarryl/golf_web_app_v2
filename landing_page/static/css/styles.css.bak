/* ===== General Page Styling ===== */
body {
    font-family: 'Caveat', cursive, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 20px;
    text-align: center;
}

/* ===== Title Styling ===== */
h1 {
    font-size: 120px !important;
    color: #166534;
    text-shadow: 4px 4px 8px rgba(0, 0, 0, 0.3);
    text-align: center;
    margin-bottom: 20px;
}

/* ===== Date Styling (Under Title) ===== */
h3 {
    font-size: 32px !important;
    color: #444;
    text-align: center;
}

/* ===== Section Headers (Total Score & Net Score) ===== */
h2 {
    font-size: 40px !important;
    font-weight: bold;
    color: #e67e22;
    margin-bottom: 15px;
}

/* ===== Table Container (Narrower Width) ===== */
.table-container {
    width: 60%; /* üîº Reduced from 90% to 60% */
    margin: 20px auto;
    background: #ffffff;
    padding: 15px;
    border-radius: 10px;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    border: 4px solid #166534;
}

/* ===== Table Styling (Now Narrower) ===== */
table {
    width: 100%; /* Keep table full width within the narrower container */
    border-collapse: collapse;
    background: #fff;
    border-radius: 10px;
    overflow: hidden;
}

/* ===== Table Header ===== */
thead {
    background-color: #166534;
    color: #fff;
    font-size: 28px;
}

th, td {
    padding: 12px; /* üîº Reduced spacing */
    font-size: 24px;
    text-align: center;
    border-bottom: 2px solid #ddd;
}

/* ===== Adjusted Column Widths to Bring Data Closer ===== */
th:nth-child(1), td:nth-child(1) { width: 10%; } /* Place */
th:nth-child(2), td:nth-child(2) { width: 50%; } /* Name */
th:nth-child(3), td:nth-child(3) { width: 20%; } /* Total Score */
th:nth-child(4), td:nth-child(4) { width: 20%; } /* Net Score (if applicable) */

/* ===== Alternating Row Colors ===== */
tbody tr:nth-child(even) {
    background-color: #eaf7e4;
}

tbody tr:nth-child(odd) {
    background-color: #ffffff;
}

/* ===== Score Styling ===== */
.score {
    font-weight: bold;
    font-size: 28px;
    color: #166534;
}

/* ===== Back to Home Button ===== */
.back-home {
    display: inline-block;
    margin-top: 30px;
    padding: 20px 40px;
    background-color: #166534;
    color: white;
    border-radius: 10px;
    text-decoration: none;
    font-size: 28px;
    font-weight: bold;
}

.back-home:hover {
    background-color: #134a2d;
}

body {
    font-family: 'Caveat', cursive, sans-serif;
    background-image: url("/static/images/golf-bg.jpg"); /* üñºÔ∏è Your image here */
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    color: #111;
}

/* Optional: add a slight dark overlay for better text contrast */
body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(255, 255, 255, 0.6); /* white semi-transparent overlay */
    z-index: -1;
}

.section-header {
    font-size: 32px;
    color: #166534;
    font-weight: bold;
    margin-bottom: 15px;
    text-align: center;
}

#progress-bar {
    transition: width 0.5s ease-in-out;
}
